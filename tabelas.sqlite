CREATE table if not exists servicos (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  nome VARCHAR(100) NOT NULL,
  preco DECIMAL(8,2) NOT NULL,
  duracao INTEGER,
  descricao TEXT
);

